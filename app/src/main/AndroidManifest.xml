<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.core.kneewrex">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kneewrex">
        <activity
            android:name=".activities.EmergencyActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.StatusActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.ParametersActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.ProtocolsActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.DisclaimerActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.CalibrationActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.ResettingActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:noHistory="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.Kneewrex.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.StartActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.Angle_Calibration"
            android:exported="true"
            android:screenOrientation="landscape" />
    </application>

</manifest>